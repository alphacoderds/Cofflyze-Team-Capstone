<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF" /> <!-- Ubah ke warna yang Anda inginkan -->

    <!-- Border -->
    <stroke
        android:color="#D3D3D3"
    android:width="2dp" />

    <!-- Sudut border -->
    <corners android:radius="8dp" /> <!-- Radius untuk sudut border -->

    <!-- Padding di dalam EditText -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
